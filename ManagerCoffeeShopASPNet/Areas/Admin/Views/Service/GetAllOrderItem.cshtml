@using NonFactors.Mvc.Grid;
@model IEnumerable<OrderItem>
@{
    ViewBag.Title = "GetAllOrderItem";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.ActionLink("Xuất báo cáo", "PrintReport","Service",new { @class="btn btn-primary" })
@(Html
        .Grid(Model).Build(columns =>
        {
            columns.Add(o => o.OrderID).Titled("OrderID").Sortable(false);
            columns.Add(o => o.Order.Customer.Name).Titled("Tên khách hàng").Sortable(false);
            columns.Add(o => o.Order.PosID).Titled("Vị trí").Sortable(false);
            columns.Add(o => o.Order.OrderDateTime).Titled("Thời gian vào");
            columns.Add(o => o.FoodAndDrink.Name).Titled("Name").Sortable(false);
            columns.Add(o => o.Quantity).Titled("Quantity").Sortable(false);
            columns.Add(o => o.Desc).Titled("Desc").Sortable(false);
            columns.Add(o => o.Status).Titled("Status").Sortable(false);
        })
        .WithFilterMode(GridFilterMode.FilterRow)
        .Empty("Data is empty")
        .Filterable()
        .Sortable()
)

