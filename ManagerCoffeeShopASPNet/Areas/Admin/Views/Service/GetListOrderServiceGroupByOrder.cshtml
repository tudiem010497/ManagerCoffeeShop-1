@model IEnumerable <ManagerCoffeeShopASPNet.Order>
@using NonFactors.Mvc.Grid

@{
    ViewBag.Title = "GetListOrderServiceGroupByOrder";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2 style="text-align:center">DANH SÁCH HÓA ĐƠN PHỤC VỤ</h2>
<br />
@(Html
    .Grid(Model)
    .Build(columns =>
    {

    columns.Add(o => o.CustomerID).Titled("Mã KH").Sortable(false);
    columns.Add(o => o.PosID).Titled("Vị trí").Sortable(true);
    columns.Add(o => o.OrderDateTime).Titled("Ngày giờ đặt").Sortable(true);
    columns.Add(o => o.DiscountMoney).Titled("Giảm giá").Sortable(false);
    columns.Add(o => o.TotalAmount).Titled("Tổng tiền").Sortable(true);
    columns.Add(o => o.Currency).Titled("Đơn vị tiền").Sortable(false);
    columns.Add(o => o.Desc).Titled("Ghi chú").Sortable(false);
    columns.Add(o => o.Status).Titled("Trạng thái").Sortable(false);
    columns.Add(o => o.OrderID).Encoded(false).RenderedAs(o => (
        @Html.ActionLink("Xem Chi tiết", "DetailOrderNeedSevice", "Service", new { OrderID = o.OrderID }, new { @class = "btn btn-sm btn-outline-primary btnDetailOrder" }).ToHtmlString()
        + " " + @Html.ActionLink("Đã phục vụ", "UpdatedOrderClosed", "Service", new { OrderID = o.OrderID }, new { @class = "btn btn-sm btn-primary btnUpdatedOrderClosed" }).ToHtmlString()
        ));
    })
    //.WithFilterMode(GridFilterMode.FilterRow)
    .Empty("Data is empty")
    .Filterable()
    .Sortable()
    .Pageable(pager =>
        {
            pager.RowsPerPage = 6;
        })
)